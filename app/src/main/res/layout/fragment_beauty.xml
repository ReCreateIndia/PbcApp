<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BeautyFragment">

    <ScrollView
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/image_slider1"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                app:auto_cycle="true"
                app:corner_radius="20"
                app:period="1000"
                app:delay="0"
                android:layout_marginBottom="70dp"
                tools:ignore="MissingConstraints" >
            </com.denzcoskun.imageslider.ImageSlider>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="5"


                android:columnCount="2">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/makeup"

                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="35dp"
                    app:cardCornerRadius="18dp"
                    android:elevation="10dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/makeup1"
                            android:scaleType="fitXY"
                            />



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Makeup"
                            android:layout_alignParentBottom="true"
                            android:textSize="25sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:paddingBottom="10dp"
                            android:layout_marginLeft="12dp"
                            />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/bridal1"

                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="25dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="5dp"
                    >
                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="#000000"


                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/bridalpackage"


                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bridal package"
                            android:layout_alignParentBottom="true"
                            android:textSize="25sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:paddingBottom="10dp"
                            android:layout_marginLeft="12dp"

                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/facial"

                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="35dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="5dp"
                    android:layout_marginTop="30dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/facial"
                            android:scaleType="fitXY"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Facial"
                            android:layout_alignParentBottom="true"
                            android:textSize="25sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:paddingBottom="5dp"
                            android:layout_marginLeft="12dp"

                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/wax"

                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="25dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="5dp"
                    android:layout_marginTop="30dp"
                    >
                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/waxx"
                            android:scaleType="fitXY"


                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Wax"
                            android:layout_alignParentBottom="true"
                            android:textSize="25sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:paddingBottom="5dp"
                            android:layout_marginLeft="12dp"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/threading"

                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="35dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="5dp"
                    android:layout_marginTop="30dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/tgreadingg"
                            android:scaleType="fitXY"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Threading"
                            android:layout_alignParentBottom="true"
                            android:textSize="25sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:paddingBottom="5dp"
                            android:layout_marginLeft="12dp"

                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/manecure"

                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="25dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="5dp"
                    android:layout_marginTop="30dp"
                    >
                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/manecure"



                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Manecure"
                            android:layout_alignParentBottom="true"
                            android:textSize="25sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:paddingBottom="5dp"
                            android:layout_marginLeft="12dp"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/padecure"

                    android:layout_columnWeight="1"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="35dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="5dp"
                    android:layout_marginTop="30dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/padecureee"
                            android:scaleType="fitXY"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="padecure"
                            android:layout_alignParentBottom="true"
                            android:textSize="25sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:paddingBottom="5dp"
                            android:layout_marginLeft="12dp"

                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>





                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/haircut"

                    android:layout_columnWeight="1"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="35dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="5dp"
                    android:layout_marginTop="30dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/haircut"
                            android:scaleType="fitXY"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hair Cut"
                            android:layout_alignParentBottom="true"
                            android:textSize="25sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:paddingBottom="5dp"
                            android:layout_marginLeft="12dp"

                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/hairstyle"

                    android:layout_columnWeight="1"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="25dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="5dp"
                    android:layout_marginTop="30dp"
                    >
                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/hiarstyle"
                            android:scaleType="fitXY"


                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hair Style"
                            android:layout_alignParentBottom="true"
                            android:textSize="25sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:paddingBottom="5dp"
                            android:layout_marginLeft="12dp"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>